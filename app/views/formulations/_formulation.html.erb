<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover table-sm">
    <thead>
      <tr> 
        <th scope="col">Product name</th>
        <th scope="col">Product type</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
<tbody>
      <% @formulations.each do |formulation| %>
        <tr>
          <td><%= formulation.product_name %></td>
          <td><%= formulation.description %></td>
          <td class="text-center"><%= link_to "Show", formulation_path(formulation), class:"btn btn-outline-success btn-sm" %></td> 
          <td class="text-center"><%= link_to "Edit", edit_formulation_path(formulation), class:"btn btn-outline-success btn-sm" %></td>
          <td class="text-center"><%= button_to "Delete", formulation, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm"%></td> 
     <% end %>
      </tbody>
    </table>




