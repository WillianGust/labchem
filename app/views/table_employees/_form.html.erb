  </div>
  <div class="form-floating mb-3">
    <%= form.text_field :responsabilite, class: "form-control" %>
    <%= form.label :responsabilite, style: "display: block", class: "col-sm-2 control-label" %>
  </div>

  <div class="form-floating mb-3">
    <%= form.text_field :exigence, class: "form-control" %>
    <%= form.label :exigence, style: "display: block", class: "col-sm-2 control-label" %>
  </div>

  <div class="form-floating mb-3">
    <%= form.text_field :experience, class: "form-control" %>
