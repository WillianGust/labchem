<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover table-sm">
    <thead>
      <tr> 
        <th scope="col">Compagnie</th>
        <th scope="col">Titre Poste</th>
        <th>Responsabilite</th>
        <th>Exigence</th>
        <th>Annees d'Experience</th>
        <th>Profil / Competence</th>
        <th>Besoin Marche</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

      <tbody>
      <% @table_employees.each do |table_employee| %>
        <tr>
          <td><%= table_employee.nom %></td>
          <td><%= table_employee.titre_poste %></td>
          <td class="text-center"><%= table_employee.responsabilite %></td>
          <td class="text-center"><%= table_employee.exigence %></td>
          <td class="text-center"><%= table_employee.experience %></td>
          <td class="text-center"><%= table_employee.profil_competence %></td>
          <td class="text-center"><%= table_employee.besoin_marche %></td>
          <td class="text-center"><%= button_to "Effacer", table_employee, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm"%></td> 
          <td class="text-center">
            <button type="button" class="btn btn-outline-success btn-sm" data-bs-toggle="modal" data-bs-target="#exampleModal-<%= table_employee.id %>">
               Montrer
            </button>
          </td> 
        </tr>
          <%= render 'modal', table_employee: table_employee %>
        <% end %>
      </tbody>
    </table>
    <div class="apple_pagination mb-3">
      <%= will_paginate @raw_materials, :container => false %>
    </div>
</div>