<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover table-sm">
    <thead>
      <tr> 
        <th scope="col">Product name</th>
        <th scope="col">Product type</th>
        <th>Volume solid</th>
        <th>Weight solid</th>
        <th>Volatile organic compound</th>
        <th>Pigment volume concentration</th>
        <th>Density</th>
        <th>Price</th>
        <th></th>
      </tr>
    </thead>

      <tbody>
      <% @raw_materials.each do |raw_material| %>
        <tr>
          <td><%= link_to raw_material.product_name, raw_material %></td>
          <td><%= link_to raw_material.product_type, raw_material %></td>
          <td class="text-center"><%= raw_material.volume_solid %></td>
          <td class="text-center"><%= raw_material.weight_solid %></td>
          <td class="text-center"><%= raw_material.volatile_organic_compound %></td>
          <td class="text-center"><%= raw_material.pigment_volume_concentration %></td>
          <td class="text-center"><%= raw_material.density %></td>
          <td class="text-center"><%= raw_material.price %></td>
          <td class="text-center"><%= button_to "Delete", raw_material, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm"%></td> 
          <td class="text-center"><button type="button" class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                    Launch demo modal<%= link_to "Show", raw_material, class:"btn btn-outline-primary btn-sm"%>
                                  </button></td> 
        </tr>
        <% end %>
      </tbody>
    </table>
<%= will_paginate @raw_materials, :container => false %>
</div>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>




