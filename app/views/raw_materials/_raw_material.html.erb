<div id="<%= dom_id raw_material %>">
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr> 
          <th scope="col">Product name</th>
          <th>Product type</th>
          <th>Volume solid</th>
          <th>Weight solid</th>
          <th>Volatile organic compound</th>
          <th>Pigment volume concentration</th>
          <th>Density</th>
          <th>Price</th>
          <th></th>
          <%# <th></th> %>
        </tr>
      </thead>

        <tbody>
          <tr>
            <td><%= raw_material.product_name %></td>
            <td><%= raw_material.product_type %></td>
            <td><%= raw_material.volume_solid %></td>
            <td><%= raw_material.weight_solid %></td>
            <td><%= raw_material.volatile_organic_compound %></td>
            <td><%= raw_material.pigment_volume_concentration %></td>
            <td><%= raw_material.density %></td>
            <td><%= raw_material.price %></td>
            <td><%= button_to "Delete this raw material", raw_material, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm" %></td>
            <%# <td><%= link_to "Show this raw material", raw_material</td> %>
          </tr>
        </tbody>
      </table>
  </div>
</div>
